<!DOCTYPE html>
<html>
  <head>
    <title>Nozama.com. Spend more. Smile less.</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
          window.currentUser = {
            id: <%= current_user.id %>,
            email: "<%= current_user.email %>",
            name: "<%= current_user.name %>"
          };
      </script>
    <% end %>
    <script type="text/javascript">
      window.favicon = "<%= image_url('favicon.ico') %>";
      window.logo1URL = "<%= image_url('logo.png') %>";
      window.logo2URL = "<%= image_url('logo2.png') %>";
      window.usFlag = "<%= image_url('usFlag.png') %>";
      window.carousel1 = "<%= image_url('carousel1.jpg') %>";
      window.emptyCart = "<%= image_url('emptyCart.svg') %>";
      window.banana = "<%= image_url('banana.jpeg') %>";
      window.potato = "<%= image_url('potato.jpg') %>";
    </script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
        integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
  </head>

  <body>
    <%= yield %>
  </body>
</html>
